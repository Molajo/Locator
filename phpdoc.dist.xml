<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
    <title><![CDATA[<b>Molajo</b> Project]]></title>
    <parser>
        <target>Docs</target>
        <markers>
            <item>TODO</item>
            <item>FIXME</item>
        </markers>
        <extensions>
            <extension>php</extension>
        </extensions>
        <visibility></visibility>
    </parser>
    <transformer>
        <target>docs</target>
    </transformer>
    <logging>
        <level>warn</level>
        <paths>
            <default>{APP_ROOT}/Docs/log/{DATE}.log</default>
            <errors>{APP_ROOT}/Docs/log/{DATE}.errors.log</errors>
        </paths>
    </logging>
    <transformations>
        <template name="clean"/>
    </transformations>
    <files>
        <directory>Application</directory>
        <directory>Kernel</directory>
        <directory>Service</directory>
        <directory>Sites</directory>
        <directory>User</directory>
        <directory>Vendor/Molajo</directory>
        <ignore>.dev/*</ignore>
        <ignore>Docs/*</ignore>
        <ignore>Extension/*</ignore>
        <ignore>Vendor/composer/*</ignore>
        <ignore>Vendor/filp/*</ignore>
        <ignore>Vendor/Joomla/*</ignore>
        <ignore>Vendor/PhpMailer/*</ignore>
        <ignore>Vendor/psr/log/*</ignore>
        <ignore>/*.phtml</ignore>
    </files>
</phpdoc>
