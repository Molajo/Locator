<?xml version="1.0" encoding="utf-8"?>
<extension type="Templateview" version="1.0">
    <name>VIEW_TEMPLATE_UI-BUTTON-GROUP-FOUNDATION_NAME</name>
    <author>Amy Stephen</author>
    <create_date>January 2013</create_date>
    <copyright>Copyright (C) 2013 Amy Stephen. All rights reserved.</copyright>
    <license>MIT</license>
    <author_email>hello@molajo.org</author_email>
    <author_url>http://molajo.org</author_url>
    <version>1.0</version>
    <description>VIEW_TEMPLATE_UI-BUTTON-GROUP-FOUNDATION_DESCRIPTION</description>
    <model name="Uibuttongroupfoundation" extends="Templateview">
        <table>
            <plugins>
                <plugin name="Foundationui"/>
            </plugins>
        </table>
        <customfields>
            <customfield name="parameters">
                <field name="button_group_type" type="char" null="0" default="primary"
                       values="primary,secondary,success,alert"/>
                <field name="button_group_size" type="char" null="0" default="regular"
                       values="tiny,small,regular,large"/>
                <field name="button_group_shape" type="char" null="0" default="square" values="square,radius,rounded"/>
                <field name="button_group_class" type="char" null="0" default="even,three-up"
                       values="even,two-up,three-up,four-up,five-up"/>
                <field name="button_group_array" type="char" null="0" default=" "/>
            </customfield>
        </customfields>
    </model>
</extension>
